<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">

    <Button
        android:id="@+id/btSignIn_Login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@color/colorAccent"
        android:text="@string/singn_in_telaLogin"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/etSenha_Login"
        app:layout_constraintStart_toStartOf="@+id/etSenha_Login"
        app:layout_constraintTop_toBottomOf="@+id/etSenha_Login" />

    <EditText
        android:id="@+id/etSenha_Login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="@string/senha_telaLogin"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/etEmail_Login"
        app:layout_constraintStart_toStartOf="@+id/etEmail_Login"
        app:layout_constraintTop_toBottomOf="@+id/etEmail_Login" />

    <EditText
        android:id="@+id/etEmail_Login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:hint="@string/email_telaLogin"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="48dp"
        android:contentDescription="@string/imagem_com_o_logo_da_empresa_telaLogin"
        app:layout_constraintEnd_toEndOf="@+id/etEmail_Login"
        app:layout_constraintStart_toStartOf="@+id/etEmail_Login"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/esqueceu_sua_senha_telaLogin"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="@+id/btSignIn_Login"
        app:layout_constraintStart_toStartOf="@+id/btSignIn_Login"
        app:layout_constraintTop_toBottomOf="@+id/btSignIn_Login" />
</androidx.constraintlayout.widget.ConstraintLayout>